<% layout('layouts/boilerplate') %>

<div class="container text-center">
  <h1>Add a New Farm</h1>
  <form
    action="/farms"
    method="POST"
    class="needs-validation text-center"
    novalidate
  >
    <div class="mb-3">
      <label for="name" id="name-label" class="form-label">Farm Name</label>
      <input type="text" name="name" id="" placeholder="Farm Name" required />
    </div>
    <div class="mb-3">
      <label for="city" id="city-label" class="form-label">Farm Name</label>
      <input type="text" name="city" id="" placeholder="City" required />
    </div>
    <div class="mb-3">
      <label for="email" id="email-label">Email</label>
      <input
        type="email"
        name="email"
        id="email"
        placeholder="@@@@@@@"
        required
      />
    </div>
    <button class="btn btn-success">Submit</button>
  </form>
</div>
