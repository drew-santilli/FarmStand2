<% layout('layouts/boilerplate') %>

<div class="container text-center">
  <h1><%= farm.name %></h1>
  <h2>Add a Product</h2>
  <form
    action="/farms/<%= farm._id %>/products"
    method="POST"
    class="needs-validation text-center"
    novalidate
  >
    <div class="mb-3">
      <label for="name" id="name-label" class="form-label">Product Name</label>
      <input
        type="text"
        name="name"
        id=""
        placeholder="Product Name"
        required
      />
    </div>
    <div class="mb-3">
      <label for="price" id="price-label">Product Price</label>
      <input
        type="number"
        name="price"
        id=""
        placeholder="Product Price"
        required
      />
    </div>
    <select name="category" id="category">
      <% for (let category of categories) {%>
      <option value="<%= category %>"><%= category %></option>
      <% } %>
    </select>
    <button class="btn btn-success">Submit</button>
  </form>
  <a href="/farms/<%= farm._id %>">Back to <%= farm.name %></a>
</div>
